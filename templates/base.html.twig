<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <style>
        html {
            font-family: Arial, sans-serif;
        }

        header {
            background: gainsboro;
            height: 5%;
            padding-left: 10px;
            padding-right: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: nowrap;
        }

        body {
            margin: 0;
        }

        a {
            text-decoration: none;
            background: gray;
            color: white;
            border-radius: 15px;
            padding: 5px;
            text-align: center;
        }

        select {
            text-decoration: none;
            background: gray;
            color: white;
            border-radius: 15px;
            padding: 5px;
            text-align: center;
        }

        button {
            border: none;
            text-decoration: none;
            background: gray;
            color: white;
            border-radius: 15px;
            padding: 5px;
            text-align: center;
        }

        .margin-right {
            margin-right: 5px;
        }
    </style>

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<header>
    <select class="margin-right" id="MonthSelect">
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>
    <select class="margin-right" id="FormattingTypeSelect">
        <option value="list">List</option>
        <option value="table">Table</option>
    </select>

    <input id="ShowWeekendsCheckbox" type="checkbox" title="Show Weekends" name="Show Weekends">
    <label for="Show Weekends" class="margin-right">show weekends</label>
    <button id="ShowButton" onclick="ShowCalendar()">Show</button>

    <script>
        let showButton = document.getElementById('ShowButton');
        let showWeekendsCheckbox = document.getElementById('ShowWeekendsCheckbox');
        let formattingTypeSelect = document.getElementById('FormattingTypeSelect');
        let monthSelect = document.getElementById('MonthSelect');

        function ShowCalendar() {
            let month = monthSelect.options[monthSelect.options.selectedIndex].value;
            let formatting = formattingTypeSelect.options[formattingTypeSelect.options.selectedIndex].value;

            let params = new URLSearchParams({
                formatting: formatting,
                selectWeekends: showWeekendsCheckbox.checked
            })
            document.location.href = `/calendar/${month}?` + params;
        }
    </script>
</header>
<body>
{% block body %}{% endblock %}
</body>
</html>
